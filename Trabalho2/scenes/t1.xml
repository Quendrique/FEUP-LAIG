<yas>
  <scene root="root" axis_length="5"/>
  
  <views default="overview"> 
    <perspective id="overview" near="0.1" far="30" angle="45">
      <from x="10" y="10" z="10" />
      <to x="0" y="0" z="0" />
    </perspective>
  </views>

  <ambient>
    <ambient r="0.6" g="0.6" b="0.6" a="1" />
    <background r="0.07" g="0.07" b="0.07" a="1" />
  </ambient>

  <lights>
    <omni id="lamp" enabled="1">
      <location x="0" y="40" z="0" w="1"/>
      <ambient r="0" g="0" b="0" a="1"/>
      <diffuse r="0.6" g="0.6" b="0.6" a="1"/>
      <specular r="0.6" g="0.6" b="0.6" a="1"/>
    </omni>
  </lights>

  <textures>
    <texture id="windows" file="./scenes/images/windows.jpg"/>
    <texture id="black_plastic" file="./scenes/images/black_plastic.jpg"/>
    <texture id="gray_wood" file="./scenes/images/gray_wood.jpg"/>
    <texture id="velvet" file="./scenes/images/velvet.jpg"/>
    <texture id="black_wood" file="./scenes/images/black_wood.jpg"/>
    <texture id="gray_wash" file="./scenes/images/gray_wash.png"/>
    <texture id="gray_stone" file="./scenes/images/gray_stone.jpg"/>
    <texture id="stainless_steel" file="./scenes/images/stainless_steel.jpg"/>
    <texture id="trash" file="./scenes/images/trash.jpg"/>
    <texture id="saturn" file="./scenes/images/saturn.jpg"/>
    <texture id="saturn_ring" file="./scenes/images/saturn_ring.jpg"/>
    <texture id="linen" file="./scenes/images/linen.jpg"/>
    <texture id="dolomite" file="./scenes/images/dolomite.jpg"/>
    <texture id="gold" file="./scenes/images/gold.jpeg"/>
    <texture id="vidal" file="./scenes/images/vidal.jpg"/>
    <texture id="height_map" file="./scenes/images/height_map3.jpg"/>
    <texture id="water" file="./scenes/images/height_map3.png"/>
    <texture id="water_color" file="./scenes/images/water_color.jpg"/>
    <texture id="terrain" file="./scenes/images/better_terrain.jpg"/>
    <texture id="space" file="./scenes/images/space.jpg"/>
  </textures>

  <materials>
    <material id="default" shininess="30" >
      <emission r="0" g="0" b="0" a="1" /> 
      <ambient  r="0.1" g="0.1" b="0.1" a="1" /> 
      <diffuse  r="0.80" g="0.80" b="0.80" a="1" /> 
      <specular  r="0.80" g="0.80" b="0.80" a="1" /> 
    </material>

    <material id="coffee" shininess="30" >
      <emission a="1" b="0" g="0" r="0"/>
      <ambient a="1" b="0.0075" g="0.0271" r="0.0545"/>
      <diffuse a="1" b="0.045" g="0.15" r="0.300"/>
      <specular a="1" b="0.015" g="0.042" r="0.1"/>
    </material>

    <material id="cream" shininess="30" >
      <emission r="0" g="0" b="0" a="1" />
      <ambient  r="0.1" g="0.1" b="0.1" a="1" /> 
      <diffuse r="0.6" g="0.5" b="0.3" a="1" />
      <specular r="0.6" g="0.5" b="0.1" a="1" />
    </material>
  </materials>

  <transformations>
    <transformation id="identity">
      <translate x="0" y="0" z="0"/>
    </transformation>

      <transformation id="scale_plane">
        <scale x="40" y="20" z="40"/>
      </transformation>

      <transformation id="center_vehicle">
        <translate x="-1.5" y="0" z="0"/>
      </transformation>

      <transformation id="place_water">
      <translate x="0" y="8" z="0"/>
        <scale x="60" y="20" z="60"/>
      </transformation>

      <transformation id="set_skybox_face0">
          <translate x="0" y="0" z="-0.5"/>
      </transformation>

      <transformation id="set_skybox_face1">
          <translate x="0" y="0.5" z="0"/>
          <rotate axis="x" angle="90"/>
      </transformation>

      <transformation id="set_skybox_face2">
          <translate x="0" y="0" z="0.5"/>
          <rotate axis="x" angle="180"/>
      </transformation>

      <transformation id="set_skybox_face3">
          <translate x="0" y="-0.5" z="0"/>
          <rotate axis="x" angle="-90"/>
      </transformation>

      <transformation id="set_skybox_face4">
          <translate x="-0.5" y="0" z="0"/>
          <rotate axis="y" angle="90"/>
      </transformation>

      <transformation id="set_skybox_face5">
          <translate x="0.5" y="0" z="0"/>
          <rotate axis="y" angle="-90"/>
      </transformation>

      <transformation id="scale_skybox">
          <scale x="200" y="200" z="200"/>
      </transformation>

  </transformations>

  <animations>

    <circular id="turn_stress_ball" span="10" center="0 0 0" radius="5" startang="45" rotang="180"/>

    <linear id="move_vehicle_1" span="20">
      <controlpoint xx="0" yy="10" zz="0"/>
      <controlpoint xx="4" yy="10" zz="6"/>
      <controlpoint xx="4" yy="10" zz="10"/>
      <controlpoint xx="0" yy="10" zz="14"/>
      <controlpoint xx="-8" yy="10" zz="10"/>
      <controlpoint xx="-8" yy="10" zz="6"/>
      <controlpoint xx="-4" yy="10" zz="0"/>
      <controlpoint xx="0" yy="10" zz="0"/>
    </linear>

    <circular id="turn_vehicle_1" span="10" center="0 20 -10" radius="10" startang="0" rotang="360"/>

    <linear id="move_vehicle_2" span="4">
      <controlpoint xx="0" yy="5" zz="-5"/>
      <controlpoint xx="-5" yy="5" zz="-5"/>
    </linear>

    <circular id="turn_vehicle_2" span="5" center="0 0 5" radius="5" startang="90" rotang="180"/>

  </animations>

  <primitives>
    <primitive id="rectangle">
      <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>  
    </primitive>

    <primitive id="triangle">
      <triangle x1="0" y1="0" z1="1"
                x2="1" y2="0" z2="0"
                x3="0" y3="0" z3="0" />
    </primitive>

    <primitive id="cylinder">
      <cylinder base="1" top="1" height="1" slices="40" stacks="40" />
    </primitive>

    <primitive id="cone">
      <cylinder base="0.75" top="1" height="2" slices="40" stacks="40" />
    </primitive>

    <primitive id="sphere">
      <sphere radius="0.5" slices="40" stacks="40" />
    </primitive>

    <primitive id="plane">
      <plane npartsU="20" npartsV="20" /> 
    </primitive>

    <primitive id="patch">
      <patch npointsU="3" npointsV="2" npartsU="60" npartsV="60"> 
        <controlpoint xx="-0.5" yy="0" zz="0.5" />
        <controlpoint xx="-0.5" yy="0" zz="-0.5" />

        <controlpoint xx="0" yy="1" zz="0.5" />
        <controlpoint xx="0" yy="1" zz="-0.5" />

        <controlpoint xx="0.5" yy="0" zz="0.5" />
        <controlpoint xx="0.5" yy="0" zz="-0.5" />
      </patch>
    </primitive>

    <primitive id="vehicle">
      <vehicle/> 
    </primitive>

    <primitive id="cylinder2">
      <cylinder2 base="1" top="2" height="3" slices="60" stacks="60" /> 
    </primitive>

    <primitive id="terrain">
      <terrain idtexture="terrain" idheightmap="height_map" parts="15" heightscale="1.5"/>
    </primitive>

    <primitive id="water">
      <water idtexture="water_color" idwavemap="water" parts="5" heightscale="0.1" texscale="1" />
    </primitive>

  </primitives>

  <components>
    <component id="root">
      <transformation>
        <transformationref id="identity"/>
      </transformation>
      <materials>
        <material id="default"/>
      </materials>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <componentref id="vehicle"/> 
        <componentref id="terrain"/>
        <componentref id="water"/> 
        <componentref id="skybox"/> 
      </children>
    </component>

    <component id="vehicle">
      <transformation>
        <transformationref id="identity"/>
      </transformation>
      <animations>
        <animationref id="move_vehicle_1"/>
        <animationref id="turn_vehicle_1"/>
      </animations>
      <materials>
        <material id="inherit"/>
      </materials>
      <texture id="stainless_steel" length_s="1" length_t="1" />
      <children>
        <primitiveref id="vehicle"/> 
      </children>
    </component>

    <component id="terrain">
      <transformation>
        <transformationref id="scale_plane"/>
      </transformation>
      <materials>
        <material id="default"/>
      </materials>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <primitiveref id="terrain"/>
      </children>
    </component>

    <component id="water">
      <transformation>
        <transformationref id="place_water"/>
      </transformation>
      <materials>
        <material id="default"/>
      </materials>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <primitiveref id="water"/>
      </children>
    </component>

    <component id="skybox">
      <transformation>
            <transformationref id="scale_skybox"/>
        </transformation>
        <materials>
            <material id="inherit"/>
        </materials>
        <texture id="space" length_s="1" length_t="1" />
        <children>
            <componentref id="skybox_face0"/>
            <componentref id="skybox_face1"/>
            <componentref id="skybox_face2"/>
            <componentref id="skybox_face3"/>
            <componentref id="skybox_face4"/>
            <componentref id="skybox_face5"/>
        </children>
    </component>

    <component id="skybox_face0">
        <transformation>
            <transformationref id="set_skybox_face0"/>
        </transformation>
        <materials>
            <material id="inherit"/>
        </materials>
        <texture id="inherit" length_s="1" length_t="1" />
        <children>
            <primitiveref id="rectangle"/>
        </children>
    </component>

    <component id="skybox_face1">
        <transformation>
            <transformationref id="set_skybox_face1"/>
        </transformation>
        <materials>
            <material id="inherit"/>
        </materials>
        <texture id="inherit" length_s="1" length_t="1" />
        <children>
            <primitiveref id="rectangle"/>
        </children>
    </component>

    <component id="skybox_face2">
        <transformation>
            <transformationref id="set_skybox_face2"/>
        </transformation>
        <materials>
            <material id="inherit"/>
        </materials>
        <texture id="inherit" length_s="1" length_t="1" />
        <children>
            <primitiveref id="rectangle"/>
        </children>
    </component>

    <component id="skybox_face3">
        <transformation>
            <transformationref id="set_skybox_face3"/>
        </transformation>
        <materials>
            <material id="inherit"/>
        </materials>
        <texture id="inherit" length_s="1" length_t="1" />
        <children>
            <primitiveref id="rectangle"/>
        </children>
    </component>

    <component id="skybox_face4">
        <transformation>
            <transformationref id="set_skybox_face4"/>
        </transformation>
        <materials>
            <material id="inherit"/>
        </materials>
        <texture id="inherit" length_s="1" length_t="1" />
        <children>
            <primitiveref id="rectangle"/>
        </children>
    </component>

    <component id="skybox_face5">
        <transformation>
            <transformationref id="set_skybox_face5"/>
        </transformation>
        <materials>
            <material id="inherit"/>
        </materials>
        <texture id="inherit" length_s="1" length_t="1" />
        <children>
            <primitiveref id="rectangle"/>
        </children>
    </component>

  </components>

</yas>