<yas>
    <scene root="root" axis_length="5"/>
    
    <views default="view">
        <perspective id="unique_perspective" near="0" far="10" angle="45">
            <from x="0" y="0" z="0" />
            <to x="10" y="10" z="10" />
        </perspective>
        <ortho id="unique_ortho" near="1" far="1" left="1" right="1" top="1" bottom="1"/>
    </views>

    <ambient>
        <ambient r="1" g="1" b="1" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <omni id="unique_light" enabled="1" >
            <location x="5" y="5" z="5" w="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <difuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
    </lights>

    <textures>
        <texture id="rocks" file="rocks.jpg" />
    </textures>

    <materials>
        <material id="red" shininess = "1" >
            <emission r="128" g="0" b="0" a="1" />
            <ambient r="128" g="0" b="0" a="1" />
            <di1use r="128" g="0" b="0" a="1" />
            <specular r="128" g="0" b="0" a="1" />
        </material>
    </materials>

    <transformations>
        <transformation id="null_transformation">
            <translate x="0" y="0" z="0"/>
        </transformation>
        <transformation id="set_side_wall">
            <scale x="1" y="5" z="5"/>
        </transformation>
        <transformation id="set_back_wall">
            <rotate axis="z" angle="-90"/>
            <scale x="1" y="-1" z="1"/>
        </transformation>
        <transformation id="set_ground">
            <rotate axis="y" angle="90"/>
            <scale x="1" y="1" z="-1"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1"/>
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0"
                      x2="1" y2="0" z2="0"
                      x3="0" y3="0" z3="1" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="2" top="2" height="5" slices="20" stacks="4" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="3" slices="30" stacks="30" />
        </primitive>
        <primitive id="torus">
            <torus inner="2" outer="3" slices="15" loops="60" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
                <transformationref id="null_transformation"/>
            </transformation>
            <materials>
                <material id="red"/>
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="side_wall"/>
                <componentref id="back_wall"/>
                <componentref id="ground"/>
            </children>
        </component>
        <component id="side_wall">
            <transformation>
                <transformationref id="set_side_wall"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>
        <component id="back_wall">
            <transformation>
                <transformationref id="set_back_wall"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="side_wall"/>
            </children>
        </component>
        <component id="ground">
            <transformation>
                <transformationref id="set_ground"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="side_wall"/>
            </children>
        </component>
    </components>

</yas>