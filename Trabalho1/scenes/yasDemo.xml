<yas>
    <scene root="root" axis_length="5"/>
    
    <views default="view">
        <perspective id="unique_perspective" near="0" far="10" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="unique_ortho" near="1" far="1" left="1" right="1" top="1" bottom="1"/>
    </views>

    <ambient>
        <ambient r="1" g="1" b="1" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <omni id="unique_light" enabled="1" >
            <location x="5" y="5" z="5" w="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
    </lights>

    <textures>
        <texture id="rocks" file="rocks.jpg" />
    </textures>

    <materials>
        <material id="red" shininess = "1" >
            <emission r="128" g="0" b="0" a="1" />
            <ambient r="128" g="0" b="0" a="1" />
            <diffuse r="128" g="0" b="0" a="1" />
            <specular r="128" g="0" b="0" a="1" />
        </material>
    </materials>

    <transformations>
        <transformation id="identity">
            <translate x="0" y="0" z="0"/>
        </transformation>

        <transformation id="set_cube_face0">
            <translate x="0" y="0" z="0.5"/>
        </transformation>

        <transformation id="set_cube_face1">
            <translate x="0" y="-0.5" z="0"/>
            <rotate axis="x" angle="90"/>
        </transformation>

        <transformation id="set_cube_face2">
            <translate x="0" y="0" z="-0.5"/>
            <rotate axis="x" angle="180"/>
        </transformation>

        <transformation id="set_cube_face3">
            <translate x="0" y="0.5" z="0"/>
            <rotate axis="x" angle="-90"/>
        </transformation>

        <transformation id="set_cube_face4">
            <translate x="0.5" y="0" z="0"/>
            <rotate axis="y" angle="90"/>
        </transformation>

        <transformation id="set_cube_face5">
            <translate x="-0.5" y="0" z="0"/>
            <rotate axis="y" angle="-90"/>
        </transformation>

        <transformation id="set_side_wall">
            <translate x="2" y="2" z="0"/>
            <scale x="4" y="4" z="1"/>
        </transformation>

        <transformation id="set_back_wall">
            <translate x="0" y="2" z="2"/>
            <rotate axis="y" angle="90"/>
            <scale x="4" y="4" z="1"/>
        </transformation>
        
        <transformation id="set_ground">
            <translate x="2" y="0" z="2"/>
            <rotate axis="x" angle="-90"/>
            <scale x="4" y="4" z="1"/>
        </transformation>

    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="0.5" x2="0.5" y2="-0.5"/>
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0"
                      x2="1" y2="0" z2="0"
                      x3="0" y3="0" z3="1" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="2" top="2" height="5" slices="20" stacks="4" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="3" slices="30" stacks="30" />
        </primitive>
        <primitive id="torus">
            <torus inner="2" outer="3" slices="15" loops="60" />
        </primitive>
    </primitives>

    <components>

        <component id="root">
            <transformation>
                <transformationref id="identity"/>
            </transformation>
            <materials>
                <material id="red"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="side_wall"/>
                <componentref id="back_wall"/>
                <componentref id="ground"/>
            </children>
        </component>

        <component id="cube">
            <transformation>
                <transformationref id="identity"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cube_face0"/>
                <componentref id="cube_face1"/>
                <componentref id="cube_face2"/>
                <componentref id="cube_face3"/>
                <componentref id="cube_face4"/>
                <componentref id="cube_face5"/>
            </children>
        </component>

        <component id="tv">
            <transformation>
                <transformationref id="identity"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="tv_screen"/>
                <componentref id="tv_stand_arm"/>
                <componentref id="tv_stand_base"/>
            </children>
        </component>

        <component id="tv_screen">
            <transformation>
                <transformationref id="set_tv_screen"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cube"/>
            </children>
        </component>

        <component id="tv_stand_arm">
            <transformation>
                <transformationref id="set_tv_stadnd_arm"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cube"/>
            </children>
        </component>

        <component id="tv_stand_base">
            <transformation>
                <transformationref id="set_tv_stadnd_base"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cube"/>
            </children>
        </component>


        <component id="cube_face0">
            <transformation>
                <transformationref id="set_cube_face0"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_face1">
            <transformation>
                <transformationref id="set_cube_face1"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_face2">
            <transformation>
                <transformationref id="set_cube_face2"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_face3">
            <transformation>
                <transformationref id="set_cube_face3"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_face4">
            <transformation>
                <transformationref id="set_cube_face4"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_face5">
            <transformation>
                <transformationref id="set_cube_face5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="side_wall">
            <transformation>
                <transformationref id="set_side_wall"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="ground">
            <transformation>
                <transformationref id="set_ground"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>



    </components>

</yas>