<yas>
    <scene root="unique_scene" axis_length="3"/>
    
    <views default="view">
        <perspective id="unique_perspective" near="0" far="10" angle="45">
            <from x="0" y="0" z="0" />
            <to x="10" y="10" z="10" />
        </perspective>
        <ortho id="unique_ortho" near="1" far="1" left="1" right="1" top="1" bottom="1"/>
    </views>

    <ambient>
        <ambient r="1" g="1" b="1" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <omni id="unique_light" enabled="1" >
            <location x="1" y="1" z="1" w="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <difuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
    </lights>

    <textures>
        <texture id="unique_texture" file="test_texture.jpg" />
    </textures>

    <materials>
        <material id="unique_material" shininess = "1" >
            <emission r="1" g="1" b="1" a="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <di1use r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </material>
    </materials>

    <transformations>
        <transformation id="place_lower_snowman_sphere">
            <translate x="0" y="0" z="0" />
        </transformation>
        <transformation id="place_middle_snowman_sphere">
            <translate x="0" y="2.75" z="0" />
        </transformation>
        <transformation id="place_upper_snowman_sphere">
            <translate x="0" y="5" z="0"/>
        </transformation>
        <transformation id="null_transformation">
            <translate x="0" y="0" z="0"/>
        </transformation>
        <transformation id="first_translation">
            <translate x="3" y="3" z="3"/>
        </transformation>
        <transformation id="rotation">
            <rotate axis="x" angle="10"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1"/>
        </primitive>
        <primitive id="triangle">
            <triangle x1="1" y1="1" z1="1"
                      x2="0" y2="0" z2="0"
                      x3="1" y3="1" z3="0" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="2" top="2" height="5" slices="20" stacks="4" />
        </primitive>
        <primitive id="big_sphere">
            <sphere radius="2" slices="30" stacks="30" />
        </primitive>
        <primitive id="medium_sphere">
            <sphere radius="1.5" slices="20" stacks="20" />
        </primitive>
        <primitive id="small_sphere">
            <sphere radius="1" slices="10" stacks="10" />
        </primitive>
        <primitive id="torus">
            <torus inner="2" outer="3" slices="15" loops="60" />
        </primitive>
    </primitives>

    <components>

        <component id="head">
            <transformation>
                <transformationref id="place_upper_snowman_sphere"/>
            </transformation>
            <materials>
                <material id="unique_material"/>
            </materials>
                <texture id="unique_texture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="small_sphere"/>
            </children>
        </component>

        <component id="upper_body">
            <transformation>
                <transformationref id="place_middle_snowman_sphere"/>
            </transformation>
            <materials>
                <material id="unique_material"/>
            </materials>
                <texture id="unique_texture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="medium_sphere"/>
            </children>
        </component>

        <component id="lower_body">
            <transformation>
                <transformationref id="place_lower_snowman_sphere"/>
            </transformation>
            <materials>
                <material id="unique_material"/>
            </materials>
                <texture id="unique_texture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="big_sphere"/>
            </children>
        </component>

        <component id="snowman">
            <transformation>
                <transformationref id="null_translation"/>
            </transformation>
            <materials>
                <material id="unique_material"/>
            </materials>
                <texture id="unique_texture" length_s="1" length_t="1"/>
            <children>
                <componentref id="head"/>
                <componentref id="upper_body"/>
                <componentref id="lower_body"/>
            </children>
        </component>

    </components>

</yas>